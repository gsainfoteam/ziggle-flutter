# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :internal do
    setup_ci if ENV['CI']
    sync_code_signing(type: "appstore", readonly: true) if ENV['CI']
    app_store_connect_api_key(
      key_id: ENV['APP_STORE_CONNECT_KEY_ID'],
      issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
      key_content: ENV['APP_STORE_CONNECT_KEY_CONTENT'],
      duration: 1200,
    ) if ENV['CI']

    build_number = latest_testflight_build_number + 1
    sh(
      "flutter", "build", "ipa",
      "--obfuscate",
      "--split-debug-info=debug-info",
      "--release",
      "--no-codesign",
      "--build-number=#{build_number}",
    )
    build_app(
      skip_build_archive: true,
      archive_path: "../build/ios/archive/Runner.xcarchive",
      export_method: "app-store",
      export_team_id: CredentialsManager::AppfileConfig.try_fetch_value(:team_id),
      output_directory: "../build/ios/ipa",
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: ENV['CI'],
    )
    slack(
      slack_url: ENV['SLACK_URL'],
      payload: {
        "Build Date" => Time.now.to_s,
        "Build Number" => build_number,
      }
    ) if ENV['CI']
    Dir["../../debug-info/*.symbols"].each do |file_path|
      upload(file_path)
    end if ENV['CI']
  end

  def upload(file_path)
    sh(
      "curl",
      "https://slack.com/api/files.upload",
      "-F", 'token="' + ENV["SLACK_BOT_TOKEN"] + '"',
      "-F", 'channels="' + ENV["SLACK_CHANNEL"] + '"',
      "-F", 'title="' + File.basename(file_path) + '"',
      "-F", 'filename="' + File.basename(file_path) + '"',
      "-F", 'file=@' + file_path,
    )
  end
end
